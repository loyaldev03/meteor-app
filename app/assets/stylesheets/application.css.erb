 *= require table_sorter_style
 *= require select2
 *= require select2-bootstrap
 *= require datatables
 */

form .clearfix:before,
form .clearfix:after {
  display: inline;
}

.card_expired {
  background-color: red;
}

.ligthgreen {
  background-color: #90EE90;
}

.red {
  color: #FFFFFF;
  background-color: red;
}

.yellow {
  background-color: yellow;
}

.blacklisted {
  background-color: #EEE8CD;
}

.ligthgrey {
  background-color: #F5F5F5;
}

.help {
  /* Without this the popover won't work. */
  position: relative;
}

.comment {
  height: auto;
  display: inline-block;
  word-wrap: break-word
}

.odd {
  background-color: #E0EEEE;
}

.even {
  background-color: #FFFFFF;
}

label.error {
  float: right;
  width: 70%;
  text-align: left;
}

div.dataTables_filter label {
  text-align: left;
}

div.dataTables_filter input {
  float: right;
}

#dataTableSelect {
  height: auto;
  width: auto;
  float: left;
}

#operations_table_info {
  width: 33%;
}

.label.label-secondary {
  float: right;
  font-size: 70%;
  margin-top: 0.1em;
}

.tab-toolbar {
  border-bottom: 1px solid #ddd;
  margin-bottom: 0.5em;
  padding-bottom: 0.5em;
}

.btn_on_header {
  float: right;
  margin-top: -25px;
}

.btn_on_header_additional {
  float: right;
  margin-top: -25px;
  margin-right: 5px;
}

.box_title {
  background-color: #B0D3E6;
  font-size: 18px;
  height: 40px;
}

.box_title th {
  vertical-align: middle !important;
}

.nowrap {
  white-space: nowrap;
}

.btn-large-w {
  width: 160px !important;
}

.disabled {
  pointer-events: none;
}

.hidden_table_border,
.hidden_table_border th,
.hidden_table_border td {
  border-style: hidden;
}

.tab_body_content {
  padding: 1%;
}

.tab_body_padding {
  padding: 9px;
}

.required_asterisk:after {
  content: " *";
}

#ajax_loader {
  position: fixed;
  background-color: #EBE9EA;
  text-align: left;
  border-radius: 6px 6px 6px 6px;
  width: 120px;
  height: 35px;
  border: 2px solid #D2D2D2;
  overflow: hidden;
  left: 45%;
  top: 0px;
  display: none;
  z-index: 200000;
}

#ajax_loader p {
  position: absolute;
  float: left;
  font-size: 20px;
  font-weight: bold;
  top: 25%;
  left: 5px;
}

.help_div {
  background-color: #EBE9EA;
  border-radius: 6px 6px 6px 6px;
  border: 2px solid #D2D2D2;
}

.spinner {
  float: right;
  top: 18px;
  right: 18px;
}

.dataTables_wrapper .top,
.dataTables_wrapper .bottom {
  padding: 0;
  background-color: transparent;
  border: none;
}


.dataTables_paginate .pagination {
  margin: 0px !important;
}

.dataTables_wrapper .dataTables_paginate {
  float: right;
  text-align: center;
}

div.dataTables_filter {
  float: left;
}

#members.tab-pane .pagination {
  margin: 0em 0;
}

.div-table {
  margin-top: 25px;
}

.div-table .title {
  border-bottom: solid;
}

#suspected_list {
  height: 40vw;
  overflow-y: auto;
  width: 10%;
}

#suspected_list th,
#suspected_list td {
  padding-left: 0px !important;
  padding-right: 0px !important;
}

#evidences_information {
  float: right;
  width: 88%;
  margin-left: 10px;
}

#suspected_list td:not(.ligthgrey) {
  cursor: pointer;
}

#suspected_list tbody td,
#suspected_list thead th {
  text-align: center;
  font-size: 10px !important;
}

table.suspected_fulfillment tbody td {
  word-wrap: break-word;
  font-size: 10px !important;
}

table.suspected_fulfillment thead th,
table.suspected_fulfillment tbody td {
  text-align: center;
}

table.evidences tbody,
table.evidences thead {
  display: block;
}

table.evidences tbody {
  height: 25vw;
  overflow-y: auto;
}

form#new_campaign i#generate_fulfillment_code {
  cursor: pointer;
}

form#new_campaign .select2-selection__placeholder {
  color: black !important;
}

.error .help-inline {
  color: red;
}

table.borderless td {
  border-top-style: none !important;
  border-left-style: none !important;
  border-right-style: none !important;
  border-bottom-style: none !important;
}

table#assigned_products_table {
  table-layout: fixed;
  word-wrap: break-word;
}

table#assigned_products_table th {
  vertical-align: top;
}

.nav.nav-tabs li.active {
  font-weight: bold;
}

.tab-content .tab-pane {
  padding: 20px;
}

#tokens-help {
  display: none;
}

textarea#css_style,
textarea#club_css_style {
  font-family: monospace;
}

.dragable{
  cursor: move;
  box-shadow: inset 0px 0px 400px 110px rgba(0, 0, 0, .1);
}

table.table thead .sorting { background: url(<%= asset_path 'datatables/sort_both.png' %>) no-repeat center right !important; }
table.table thead .sorting_asc { background: url(<%= asset_path 'datatables/sort_asc.png' %>) no-repeat center right !important; }
table.table thead .sorting_desc { background: url(<%= asset_path 'datatables/sort_desc.png' %>) no-repeat center right !important; }
table.table thead .sorting_asc_disabled { background: url(<%= asset_path 'datatables/sort_asc_disabled.png' %>) no-repeat center right !important; }
table.table thead .sorting_desc_disabled { background: url(<%= asset_path 'datatables/sort_desc_disabled.png' %>) no-repeat center right !important; }

form input[type="radio"], input[type="checkbox"] {
  margin-top: 0px !important;
  margin-bottom: 4px !important;
}

table.checkout-settings td:first-child {
  width: 20%;
}

table.checkout-settings td:first-child p {
  font-weight: bold;
}

table.checkout-settings td:nth-child(2) a.btn.btn-mini.btn-danger {
  margin-top: 3px;
}

#modal-checkout-settings { display: none; }

@media only screen and (max-width: 980px) {
  #btn-copy-campaign-name { margin-top: 5px; }
}

table#operations_table th:last-child {
  text-align: center;
}
 
table#operations_table td:last-child {
  text-align: left;
  white-space: nowrap;
  width: 1%;
}

table#operations_table td:last-child a.btn.btn-small { margin: 2px 5px 2px 0px; }
