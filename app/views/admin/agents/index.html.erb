<div class="page-header">
  <h1> <%= t('.title') %> </h1>
    <%= link_to(new_admin_agent_path, :class => "btn btn-primary btn_on_header") do %> 
      <i class="icon-plus"></i> New Agent
  <% end %>
</div>

<table id="agents_table" class="table table-bordered table-condensed dataTable" data-source="<%= admin_agents_url(format: "json") %>">
  <thead>
    <tr>
      <th><%= t('activerecord.attributes.agent.id') %></th>
      <th><%= t('activerecord.attributes.agent.email') %></th>
      <th><%= t('activerecord.attributes.agent.username') %></th>
      <th id="th_created_at"><%= t('activerecord.attributes.agent.created_at') %></th>
      <th><%= t('actions') %></th>
    </tr>
  </thead>
  <tbody>
  </tbody>
</table>

<% content_for :javascript do %>
  agent_index_functions(<% Agent.datatable_columns.size %>);
<% end %>
