<%- model_class = @current_partner.class -%>
<h1><%=t '.title', :default => model_class.model_name.human %></h1>

<p>
  <strong><%= model_class.human_attribute_name(:prefix) %>:</strong><br>
  <%= @partner.prefix %>
</p>
<p>
  <strong><%= model_class.human_attribute_name(:name) %>:</strong><br>
  <%= @partner.name %>
</p>
<p>
  <strong><%= model_class.human_attribute_name(:contract_uri) %>:</strong><br>
  <%= @partner.contract_uri %>
</p>
<p>
  <strong><%= model_class.human_attribute_name(:website_url) %>:</strong><br>
  <%= @partner.website_url %>
</p>
<p>
  <strong><%= model_class.human_attribute_name(:description) %>:</strong><br>
  <%= @partner.description %>
</p>

<table class="table table-striped">
  <thread>
    <tr>
      <th><%= model_class.human_attribute_name(:description) %></th>
      <th><%= model_class.human_attribute_name(:data_rights) %></th>
      <th><%= model_class.human_attribute_name(:hosted) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
    </tr> 
  </thead>
  <tbody>
    <% @domains.each do |domain| %>
    <tr>
      <td> <%= domain.description %> </td>
      <td> <%= domain.data_rights %> </td>
      <td> <%= domain.hosted %> </td>
      <td> <%=l domain.created_at %> </td>
    </tr>
    <% end %>
  </tbody>
</table>

<div class="form-actions">
  <%= link_to t(:back),
              admin_partners_path, :class => 'btn'  %>
  <%= link_to t(:edit),
              edit_admin_partner_path(@partner), :class => 'btn' %>
  <%= link_to t(:destroy),
              admin_partner_path(@partner),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
</div>
