<%- model_class = @partner.class -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>
<p>
  <strong><%= model_class.human_attribute_name(:prefix) %>:</strong><br>
  <%= @partner.prefix %>
</p>
<p>
  <strong><%= model_class.human_attribute_name(:name) %>:</strong><br>
  <%= @partner.name %>
</p>
<p>
  <strong><%= model_class.human_attribute_name(:contract_uri) %>:</strong><br>
  <%= @partner.contract_uri %>
</p>
<p>
  <strong><%= model_class.human_attribute_name(:website_url) %>:</strong><br>
  <%= @partner.website_url %>
</p>
<p>
  <strong><%= model_class.human_attribute_name(:description) %>:</strong><br>
  <%= @partner.description %>
</p>

<div class="form-actions">
  <%= link_to t('back', :default => t("helpers.links.back")),
              admin_partners_path, :class => 'btn'  %>
  <%= link_to t('edit', :default => t("helpers.links.edit")),
              edit_admin_partner_path(@partner), :class => 'btn' %>
  <%= link_to t('destroy', :default => t("helpers.links.destroy")),
              admin_partner_path(@partner),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
</div>
