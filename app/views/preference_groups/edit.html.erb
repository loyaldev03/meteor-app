<%- model_class = @preference_group.class -%>

<div class="page-header">
  <h1><%=t '.title', :default => t('helpers.titles.new', :model => model_class.model_name.human,
                               :default => "Edit #{model_class.model_name.human}") %></h1>
</div>

<%= form_for @preference_group, as: :preference_group, url: preference_group_path(id: @preference_group), html: { class: 'form-horizontal' } do |f| %>
