    </div>
  </div>

  <div class="control-group">
    <%= f.label :name, t('activerecord.attributes.terms_of_membership.wizard.provisional_days'), :class => 'control-label' %>
    <div class="controls">
      $&nbsp;<%= f.text_field :provisional_days, :class => 'text_field input-small', :value => '0.00' %>
      <%= t('activerecord.attributes.terms_of_membership.wizard.lasting') %>
      <%= f.text_field :provisional_days, :class => 'text_field input-small', :value => '0' %>
      <%= select_tag "provisional_days_time_span", options_for_select(@dates_span), :class => 'input-small' %>
      <%= render :partial => "shared/help", :locals => { 
        :title => t('activerecord.attributes.terms_of_membership.wizard.provisional_days'), 
        :content => t('lorem') } %> 
    </div>
  </div>

  <div class="control-group">
    <%= f.label :name, t('activerecord.attributes.terms_of_membership.wizard.at_the_end_of_trial'), :class => 'control-label' %>
