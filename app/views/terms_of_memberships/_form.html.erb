      <%= radio_button_tag 'at_the_end_of_trial', 'payment', true %>
      <%= t('activerecord.attributes.terms_of_membership.wizard.payment_is_expected') %>&nbsp;
      <%= radio_button_tag 'at_the_end_of_trial', 'no_payment' %>
      <%= t('activerecord.attributes.terms_of_membership.wizard.no_pay_is_expected') %>&nbsp;&nbsp;
      <%= render :partial => "shared/help", :locals => { 
        :title => t('activerecord.attributes.terms_of_membership.wizard.at_the_end_of_trial'), 
        :content => t('lorem') } %> 
    </div>
  </div>

  <div class="control-group">
    <%= f.label :name, t('activerecord.attributes.terms_of_membership.wizard.recurring_amount'), :class => 'control-label' %>
    <div class="controls">
      $&nbsp;<%= f.text_field :recurring_amount, :class => 'text_field input-small', :value => '0.00' %>
      <%= t('activerecord.attributes.terms_of_membership.wizard.every') %>
      <%= f.text_field :recurring_amount_days, :class => 'text_field input-small', :value => '0' %>
      <%= select_tag "recurring_amount_days_time_span", options_for_select(@dates_span), :class => 'input-small' %>
      <%= render :partial => "shared/help", :locals => { 
        :title => t('activerecord.attributes.terms_of_membership.wizard.recurring_amount'), 
        :content => t('lorem') } %> 
