<div class='row-fluid'>
  <div class='span12'>
    <div class="control-group">
      <%= f.label :name, :class => 'control-label required_asterisk' %>
      <div class="controls">
        <%= f.text_field :name, :class => 'text_field input-xxlarge', required: true %>
      </div>
    </div>
  </div>
</div>
<div class='row-fluid'>
  <div class='span12'>
    <div class="control-group">
      <%= f.label :landing_name, :class => 'control-label required_asterisk' %>
      <div class="controls">
        <%= f.text_field :landing_name, :class => 'text_field input-xxlarge', required: true %>
      </div>
    </div>
  </div>
</div>
<div class='row-fluid'>
  <div class='span12'>
    <div class="control-group">
      <%= f.label :subscription_plan, :class => 'control-label required_asterisk' %>
      <div class="controls">
        <% if @campaign.new_record? %>
          <%= f.select :terms_of_membership_id, [], { class: 'form-control' }, required: true %>
        <% else %>
          <%= text_field_tag :terms_of_membership, (@campaign.terms_of_membership.name if @campaign.terms_of_membership), readonly: true %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class='row-fluid'>
  <div class='span12'>
    <div class="control-group">
      <%= f.label :enrollment_price, :class => 'control-label required_asterisk' %>
      <div class="controls">
        <div class=" input-prepend">
          <span class="add-on">$</span>
          <%= f.number_field :enrollment_price, required: true, within: 0...1000, step: 0.01, class: 'input-small' %>
        </div>
      </div>
    </div>
  </div>
</div>

<div class='row-fluid'>
  <div class='span4'>
    <div class="control-group">
      <%= f.label :initial_date, :class => 'control-label required_asterisk' %>
      <div class="controls">
        <%= f.text_field :initial_date, :class => 'datepicker input-small readonly', required: true %>
      </div>
    </div>
  </div>

  <div class='span4'>
    <div class="control-group">
      <%= f.label :finish_date, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :finish_date, :class => 'datepicker input-small readonly' %>
      </div>
    </div>
  </div>
</div>

<div class='row-fluid'>
  <div class='span12'>
    <div class="control-group">
      <%= f.label :campaign_type, :class => 'control-label required_asterisk' %>
      <div class="controls">
        <% if @campaign.new_record? %>
          <%= f.select :campaign_type, options_for_select(Campaign.campaign_types_i18n.invert, @campaign.campaign_type), { class: 'form-control', prompt: 'Choose one...' }, required: true %>
        <% else %>
          <%= text_field_tag :campaign_campaign_type, @campaign.campaign_type, readonly: true %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class='row-fluid'>
  <div class='span12'>
    <div class="control-group">
      <%= f.label :source, :class => 'control-label required_asterisk' %>
      <div class="controls">
        <% if @campaign.new_record? %>
          <%= f.select :transport, options_for_select(Campaign.transports_i18n.invert, @campaign.transport), { class: 'form-control', prompt: 'Choose one...' }, required: true %>
        <% else %>
          <%= text_field_tag :transport, @campaign.transport, readonly: true %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class='row-fluid'>
  <div class='span12'>
    <div class="control-group">
      <%= f.label :utm_medium, :class => 'control-label required_asterisk' %>
      <div class="controls">
        <%= f.select :utm_medium, options_for_select(Campaign::AVAILABLE_MEDIUMS, @campaign.utm_medium), { class: 'form-control', prompt: 'Choose one...'}, required: true %>
      </div>
    </div>
  </div>
</div>

<div class='row-fluid'>
  <div class='span12'>
    <div class="control-group">
      <%= f.label :transport_campaign_id, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :transport_campaign_id, :class => 'text_field' %>
        <%= render :partial => 'shared/help', :locals => { :title => t('activerecord.attributes.campaign.transport_campaign_id'), :content => t('activerecord.attributes.campaign.transport_campaign_id_help')} %>
      </div>
    </div>
  </div>
</div>

<div class='row-fluid'>
  <div class='span12'>
    <div class="control-group">
      <%= f.label :utm_content, :class => 'control-label required_asterisk' %>
      <div class="controls">
        <%= f.text_field :utm_content, required: true %>
      </div>
    </div>
  </div>
</div>

<div class='row-fluid'>
  <div class='span12'>
    <div class="control-group">
      <%= f.label :audience, :class => 'control-label required_asterisk' %>
      <div class="controls">
        <%= f.text_field :audience, required: true %>
      </div>
    </div>
  </div>
</div>

<div class='row-fluid'>
  <div class='span12'>
    <div class="control-group">
      <%= f.label :campaign_code, :class => 'control-label required_asterisk' %>
      <div class="controls">
        <% if @campaign.new_record? %>
          <%= f.select :campaign_code, [], {style: 'display: inline-block important!'} %>
        <% else %>
          <%= f.text_field :campaign_code, readonly: true %>
        <% end %>
        <%= render :partial => 'shared/help', :locals => { :title => t('activerecord.attributes.campaign.campaign_code'), :content => t('activerecord.attributes.campaign.campaign_code_help')} %>
      </div>
    </div>
  </div>
</div>

<div class='row-fluid'>
  <div class='span12'>
    <div class="control-group">
      <%= f.label :delivery_date, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :delivery_date %>
      </div>
    </div>
  </div>
</div>

<div class='row-fluid'>
  <div class='span12'>
    <div class="control-group">
      <%= f.label :preference_groups, :class => 'control-label' %>
      <div class="controls">
        <%= f.select :preference_groups, options_for_select(current_club.preference_groups.map{|preference_group| [preference_group.name, preference_group.id]}, @preference_groups), {}, class: 'js-example-basic-multiple input-xxlarge', style: 'display: inline-block important!', multiple: 'multiple'%>
      </div>
    </div>
  </div>
</div>

<% unless @campaign.new_record? %>
<div class='row-fluid'>
  <div class='span12'>
    <p class="muted"><i class="icon-info-sign"></i> There are some fields that can not be updated.</p>
  </div>
</div>
<% end %>

<br />

<div class="form-actions">
  <%= f.submit nil, :class => 'btn btn-primary', :id => 'submit_button' %>
  <%= link_to t(:cancel), :back, :class => 'btn', :id => 'cancel_button' %>
</div>
