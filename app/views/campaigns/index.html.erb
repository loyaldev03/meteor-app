<section> 
  <div class="page-header">
    <h1><%= t('activerecord.model.campaigns') %></h1>
    <% if can? :create, Campaign, current_club.id %>
      <%= link_to(new_campaign_path, :class => "btn btn-primary btn_on_header", :id => "new_campaign") do %> 
        <i class="icon-plus"></i> New Campaign
      <% end %>
    <% end %>
  </div>
</section>

<table id="campaigns_table" class="table table-bordered table-condensed dataTable" data-source="<%= campaigns_url(format: "json") %>">
  <thead>
    <tr>
      <th> <%= t('activerecord.attributes.campaign.id') %> </th>
      <th> <%= t('activerecord.attributes.campaign.name') %> </th>
      <th> <%= t('activerecord.attributes.campaign.campaign_type') %> </th>
      <th> <%= t('activerecord.model.products') %> </th>
      <th> <%= t('activerecord.attributes.campaign.transport') %> </th>
      <th> <%= t('activerecord.attributes.campaign.initial_date') %> </th>
      <th> <%= t('activerecord.attributes.campaign.finish_date') %> </th>
      <th> <%= t('actions') %> </th>
    </tr>
  </thead>
  <tbody>
  </tbody>
</table>

<% content_for :javascript do %>
  campaigns_functions();
<% end %>