<% if @payment_gateway_configuration.new_record? %>
  <div class="control-group">
    <%= f.label :gateway, :class => 'control-label required_asterisk' %>
    <div class="controls">
      <%= generate_select_gateway(@payment_gateway_configuration, @current_club.payment_gateway_configuration) %> 
    </div>
  </div>
<% end %>

