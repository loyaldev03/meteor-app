    <div class="controls">
      <%= f.text_field :report_group, :class => 'text_field' %>
      <%= render :partial => "shared/help", :locals => { 
          :title => t('activerecord.attributes.payment_gateway_configuration.report_group'), 
          :content => t('activerecord.attributes.payment_gateway_configuration.report_group_help') } %> 
    </div>
  </div>
<% end %>

