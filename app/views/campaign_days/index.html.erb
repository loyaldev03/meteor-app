<div class='row'>
  <div class='span12'>
    <div class='row'> 
      <%= form_tag('#', class: 'form-inline', id: 'campaignDaySearch') do %>
        <div class='span3'>
          <%= select_tag(:q, options_for_select(Campaign.transports_i18n.invert, params[:transport]), { prompt: 'Select Transport', id: 'transportSelect', class: ''}) %>
        </div>
        <div class='span9 text-right'>
          <div class="input-daterange input-group">
            <%= text_field_tag :from_date, 1.week.ago.to_date, class: 'input-sm form-control date-picker', id: 'fromDateSelect', readonly: true %>
            <span class="input-group-addon">to</span>
            <%= text_field_tag :to_date, Time.current.yesterday.to_date, class: "input-sm form-control date-picker", id: "toDateSelect", readonly: true %>
            <%= submit_tag 'Search', class: 'btn btn-primary' %>
          </div>
        </div>
      <% end %>
    </div>
    <div>
      <table id="manageCampaignDays" class="table table-striped">
        <thead>
          <tr>
            <th class="span2"><%= I18n.t("activerecord.attributes.campaign_day.date") %></th>
