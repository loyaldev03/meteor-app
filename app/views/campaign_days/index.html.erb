            <th class="span2"><%= I18n.t("activerecord.attributes.campaign_day.reached") %></th>
            <th class="span2"><%= I18n.t("activerecord.attributes.campaign_day.converted") %></th>
            <th class="span1"></th>
          </tr>
        </thead>
        <tbody>
