<section>
  <div class="page-header">
    <h1>Communications</h1>
    <h3>Subscription Plan: <%= @tom.name %></h3>
    <% if can? :create, EmailTemplate %>
      <%= link_to(new_terms_of_membership_email_template_path, :class => "btn btn-primary btn_on_header", :id => "new_communication") do %> 
        <i class="icon-plus"></i> New Communication
      <% end %>
    <% end %>
      <%= link_to("Test Communications", terms_of_membership_test_communications_path, :class => 'btn btn-primary btn_on_header_additional') %>
  </div>

  <table id="email_templates_table" class="table table-bordered table-condensed dataTable" data-source="<%= terms_of_membership_email_templates_url(format: "json") %>">
    <thead>
      <tr>
        <th> <%= t('activerecord.attributes.email_template.id') %> </th>
        <th> <%= t('activerecord.attributes.email_template.name') %> </th>
        <th> <%= t('activerecord.attributes.email_template.template_type') %> </th>
        <th> <%= t('activerecord.attributes.email_template.client') %> </th>
        <th> <%= t('actions', :default => t("helpers.actions")) %> </th>
      </tr>
    </thead>
    <tbody>
    </tbody>
  </table>
</section>

<% content_for :javascript do %>
  email_templates_table_index_functions(<%= EmailTemplate.datatable_columns.size %>);
<% end %>