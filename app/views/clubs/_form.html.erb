  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :description, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :description, :cols => 60, :rows =>5, :class => 'text_area input-xxlarge' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :cs_phone_number, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :cs_phone_number, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :theme, :class => 'control-label' %>
    <div class="controls">
      <%= theme_switcher f %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :logo, :class => 'control-label' %>
    <div class="controls">
      <%= f.file_field :logo, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :requires_external_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.check_box :requires_external_id, :class => 'check_box' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :time_zone, :class => 'control-label' %>
    <div class="controls">
      <%= f.time_zone_select(:time_zone) %>
    </div>
  </div>

  <h3>Remote domain</h3>
  <div class="control-group">
    <%= f.label :drupal_domain_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.collection_select :drupal_domain_id, @club.domains, :id, :url, include_blank: true %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :api_type, :class => 'control-label' %>
    <div class="controls">
      <%= f.select :api_type, [['Drupal', 'Drupal::Member']], include_blank: true %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :api_username, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :api_username, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :api_password, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :api_password, :class => 'text_field' %>
    </div>
  </div>


  <h3>Pardot</h3>
  <div class="control-group">
    <%= f.label :pardot_email, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :pardot_email, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :pardot_password, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :pardot_password, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :pardot_user_key, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :pardot_user_key, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                clubs_path, :class => 'btn' %>
  </div>

