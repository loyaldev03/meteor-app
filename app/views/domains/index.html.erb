<%- model_class = Domain.new.class -%>
<h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
<table id="domains_table" class="display" data-source="<%= domains_url(format: "json") %>">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:url) %></th>
      <th><%= model_class.human_attribute_name(:description) %></th>
      <th><%= model_class.human_attribute_name(:data_rights) %></th>
      <th><%= model_class.human_attribute_name(:hosted) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%= t(:actions) %></th>
    </tr>
  </thead>
  <tbody>
  </tbody>
</table>

<%= link_to t(:new), new_domain_path, :class => 'btn btn-primary' %>

<script>
  $(document).ready(domain_index_functions(<%= Domain.datatable_columns.size%>))
</script>