<%- model_class = Domain.new.class -%>

<div class="page-header">
  <h1> <%=t '.title', :default => model_class.model_name.human.pluralize %> </h1>
    <%= link_to(new_domain_path, :class => "btn btn-primary btn_on_header") do %> 
      <i class="icon-plus"></i> New Domain
  <% end %>
</div>

<table id="domains_table" class="table table-bordered table-condensed dataTable" data-source="<%= domains_url(format: "json") %>">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:url) %></th>
      <th><%= model_class.human_attribute_name(:description) %></th>
      <th><%= model_class.human_attribute_name(:data_rights) %></th>
      <th><%= model_class.human_attribute_name(:hosted) %></th>
      <th><%= t(:actions) %></th>
    </tr>
  </thead>
  <tbody>
  </tbody>
</table>

<% content_for :javascript do %>
  domain_index_functions(<%= Domain.datatable_columns.size%>);
<% end %>