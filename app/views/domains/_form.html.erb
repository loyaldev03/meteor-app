<%= form_for @domain, :html => { :class => 'form-horizontal' } do |f| %>
 
  <% if params[:action] != 'edit' %>
    <div class="control-group">
      <%= f.label :partner, :class => 'control-label' %>
      <div class="controls">
        <%= generate_select_partners_id @domain, @partner %>   
      </div>
    </div>
  <% end %>
  
  <div class="control-group">
    <%= f.label :url, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :url, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :description, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :description, :class => 'text_area' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :data_rights, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :data_rights, :class => 'text_area' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :hosted, :class => 'control-label' %>
    <div class="controls">
      <%= f.check_box :hosted, :class => 'check_box' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :Club, :class => 'control-label' %>
    <div class="controls">
      <%= generate_select_club_id f, @domain, @club %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t(:cancel), domains_path, :class => 'btn' %>
  </div>
<% end %>
