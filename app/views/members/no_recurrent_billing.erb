<%= render :partial => "shared/member_information" %>

<%= form_tag(member_no_recurrent_billing_path) do %>
	<table class="table table-bordered" > 
		<tr>
			<th>
				<%= label :amount, I18n.t('activerecord.attributes.transaction.amount'), :class => 'help-inline' %>
				<%= text_field_tag :amount %>
			</th>
			<th>
				<%= label :type, "Type", :class => 'help-inline' %>
				<%= select_tag :type, options_for_select(Transaction::ONE_TIME_BILLINGS), :class => "select_field" %>
			</th>
		</tr>
		<tr>
			<th colspan="2">
				<%= label :description, I18n.t('activerecord.attributes.transaction.description'), :class => 'help-inline' %>
				<%= text_area_tag :description, nil, :style => 'width: 99%; height: 50px' %>
			</th>
		</tr>
		<tr>
			<th colspan="2">
        <%= submit_tag t('buttons.no_recurrent_billing'), :class => 'btn btn-primary' %>
        <%= link_to t('buttons.cancel'), show_member_path, :class => 'btn' %> 
			</th>
		</tr>
	</table>
<% end %>