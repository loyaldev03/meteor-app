<table class="table table-bordered datatable_only_sorting">
  <thead>
    <tr>
      <th>Fecha</th>
      <th>Description</th>
      <th>Amount</th>
      <th></th>
    </tr>
  </thead>
  <% transactions.each do |transaction| %>
  <tr>
    <td>
      <%= l(transaction.created_at) %>
    </td>
    <td>
      <%= transaction.to_label %>
    </td>
    <td>
      <%= number_to_currency transaction.amount %>
    </td>
    <td>
      <%= link_to("Refund", member_refund_path(:transaction_id => transaction.id), :class => "btn btn-warning") if transaction.can_be_refunded? %>
    </td>
  </tr>
  <% end %>
  
</table>
