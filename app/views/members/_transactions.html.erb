<table class="table table-bordered datatable_only_sorting">
  <thead>
    <tr>
      <th colspan="4">Transactions</th>
    </tr>
  </thead>
  <% transactions.each do |transaction| %>
  <tr>
    <td>
      <%= l(transaction.created_at) %>
    </td>
    <td>
      <%= link_to transaction.response_result[0..50], "#" %>
    </td>
    <td>
      <%= number_to_currency transaction.amount %>
    </td>
    <td>
      <%= link_to("Refund", member_refund_path(:transaction_id => transaction.id), :class => "btn btn-warning") if transaction.sale? %>
    </td>
  </tr>
  <% end %>
  
</table>
