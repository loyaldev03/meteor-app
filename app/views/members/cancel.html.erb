<%= render :partial => "shared/member_information" %>

<%= form_tag(member_cancel_path, :id => 'member_cancelation_form') do %>
  <table class="table table-bordered">
    <thead>
      <% if @current_member.cancel_date %>
        <tr>
          <th>
              <%= label :current_cancel_date, "Current cancel date: #{I18n.l(@current_member.cancel_date, :format => :only_date)}" %>
          </th>
        </tr>
      <% end %>
      <tr>
        <th>
          <%= label :cancel_date, t('activerecord.attributes.member.cancel_date'), :class => 'help-inline' %> 
          <%= text_field_tag :cancel_date, nil ,:class => 'datepicker required',
                             :readonly => 'readonly' %> 
        </th>
      </tr>
      <tr>
        <th> 
          <%= label :reason, t('reason'), :class => 'help-inline' %> 
          <%= select_tag :reason, options_from_collection_for_select(@member_cancel_reason, "name", "name") %>
        </th>
      </tr>
      <tr>
        <td> 
          <%= submit_tag t('buttons.cancel_member'), :class => 'btn btn-primary' %>
          <%= link_to t('buttons.return_to_member_show'), show_member_path, :class => 'btn' %> 
        </td>
      </tr>
    </thead>
  </table>
<% end%>

<script type="text/javascript">
  $(document).ready( member_cancellation_functions() );
</script>

