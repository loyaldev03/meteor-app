<%= 
	unless params[:country_code].blank?
		select_tag( 'member[state]' ,options_from_collection_for_select(
	        Carmen::Country.coded(params[:country_code]).subregions,
	        "code", "name", 
	        params[:selected_state]),
					:prompt => t('buttons.select_state'))
	else
		select_tag 'member[state]',options_for_select(['']),:prompt => t('buttons.select_state')
	end
%>