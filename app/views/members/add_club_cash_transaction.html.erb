<%= render :partial => "shared/member_information" %>

<%= form_tag(member_add_club_cash_transaction_path) do %> 
  <table class="table table-condensed table-bordered">
    <tr> 
      <td >
        <div class="input-prepend input-append">  
	      <%= t('activerecord.attributes.club_cash_transaction.amount') %>
	      <%= text_field :club_cash_transaction, :amount, 
            :value => (params[:club_cash_transaction][:amount] if params[:club_cash_transaction]) %>
      	</div>
      </td>
    </tr>
    <tr> 
      <td> 
	    <%= label :description, t('activerecord.attributes.club_cash_transaction.description') %>
	    <%= text_area :club_cash_transaction, :description,:style => 'width: 99%; height: 200px' %>
      </td>
    </tr>
    <tr>
    	<td> <%= submit_tag t('save'), :class => 'btn btn-primary' %> 
    	     <%= link_to t('back'), show_member_path, :class => 'btn' %> </td>
    </tr>
  </table>
<% end %>


<script>
  $(document).ready(club_cash_transaction_functions());
</script>