<h1><%= params[:action].humanize %> - <%= @current_member.visible_id %> - <%= @current_member.full_name %></h1>

<%= form_tag(member_blacklist_path) do %>
  <table class="table table-bordered">
    <tr>
      <td> 
        <%= label :reason, t('reason'), :class => 'help-inline' %> 
        <%= select_tag :reason, options_from_collection_for_select(@blacklist_reason, "name", "name") %>
      </td>
    </tr>
    <tr>
      <td> <%= submit_tag t(:save), :class => 'btn btn-primary', 
                                    :confirm => t('text_blacklist_are_you_sure') %>
           <%= link_to t(:Cancel), show_member_path, :class => 'btn' %> </td>
    </tr>
  </table>
<% end%>

