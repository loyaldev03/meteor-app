<p> <h1> <%= t('search_result') %> </h1> </p>
<table class="table table-bordered table-condensed">

  <thead>
  	<tr>
      <th> <%= t('activerecord.attributes.member.status') %> </th>
      <th> <%= t('activerecord.attributes.member.visible_id') %> </th>
      <th> <%= t('activerecord.attributes.member.external_id') %> </th>
      <th> <%= t('activerecord.attributes.member.full_name') %> </th>
      <th> <%= t('activerecord.attributes.member.full_address') %> </th>
  	</tr>
    <% if members.count == 0 %>
      <tr> <td colspan="5"> <%= t('activerecord.attributes.member.search_member_not_found') %> </td> </tr>
    <% end %> 
  <% members.each do |member| %>
    <tr> 
      <th <% if member.lapsed? %>
            class = "red"
          <% elsif member.active? %>
            class = "green"
          <% elsif %>
            class = "yellow"
          <% end %>
      > 
      <%= member.status %>
      </th>
      <th> <%= link_to member.visible_id, show_member_path(:member_prefix => member.visible_id), :class =>"icon-share-alt" %> </th>
      <th> <%= member.external_id if !member.external_id.nil? %> </th>
      <th> <%= member.full_name %> </th>
      <th> <%= member.full_address %> </th>
    </tr>
  <% end %>
  </thead>  
</table>
