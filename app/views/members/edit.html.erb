<%= render :partial => "shared/member_information" %>

<script> 
  var id = <%= @current_member.id %>; 
  var state = "<%= @current_member.state.to_s %>";
</script> 

<%= form_for @current_member, :url => edit_member_path(:id => @current_member), :html => { :class => 'form-horizontal' } do |f| %>
<%= render :partial => 'form', :locals => { :f => f } %>
<% end %>

<script type="text/javascript">
  $(document).ready( edit_member_functions() );
  if(state!=""){
  	$.get('', { country_code:"<%=@current_member.country%>", 
  		        selected_state:state }, null, 'script'); 
  }

  $(document).ready(function(){ $('#states_div').attr('data-remote', 'true'); })
</script>