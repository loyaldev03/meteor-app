
<table class="table table-bordered datatable_only_sorting">
  <thead>
  	<tr>
	  <th> <%= t('activerecord.attributes.fulfillment.producto') %> </th>
	  <th> <%= t('activerecord.attributes.fulfillment.asigned_at') %> </th>
	  <th> <%= t('activerecord.attributes.fulfillment.delivered_at') %> </th>
	  <th> <%= t('activerecord.attributes.fulfillment.renewable_at') %> </th>    
	  <th> <%= t('actions') %> </th>    
   	</tr>
   </thead>
   <tbody>
   	  <% unless fulfillments.nil? %>
      <% fulfillments.each do |fulfillment| %>
      	<tr 
      	  <% if fulfillment.status == 'open' %>
      	  class = "yellow"
      	  <% end %>
      	>
			<td> <%= fulfillment.product %> </td>
			<td> <%= I18n.l fulfillment.asigned_at, :format => 'long' %> </td>
			<td> <%= I18n.l delivered_at, :format => 'long' %> </td>
			<td> <%= I18n.l renewable_at, :format => 'long' %> </td>
			<td>
			  <%= form_for @fulfillment, :as => :fulfillment, :url => member_resend_fulfillment_path(:fulfillment_id => fulfillment.id), do |f| %>
			  	<%= f.submit t('resend'), :name => 'resend', :class => "btn confirm" %>
			  <% end %>
			</td>
		</tr>
      <% end %>	
      <% end %>	
   </tbody>
</table>
