<%= render :partial => "shared/member_information" %>

<table class="table table-bordered">
	<tr>
	  <td colspan="2"> <%= t('activerecord.attributes.operation.operation_date') %>: <%= @operation.operation_date %></td>
	</tr>
	<tr> 
	  <td> <%= t('activerecord.attributes.operation.description') %>: <%= @operation.description %> </td>
	  <td> <%= t('activerecord.attributes.operation.created_by') %>: <%= @operation.created_by.username %> </td>
	</tr>
    <%= form_for @operation, :as => :operation, :url => operation_path(:id => @operation), do |f|%>
	<tr> 
	  <tr>
	  	<td colspan="3"> <%= f.text_area :notes, :value => @operation.notes, :style => 'width: 99%; height: 150px' %> </td>
	  </tr>
	  <tr>
	    <td colspan="2"> <%= f.submit t('buttons.save_operation_note'), :class => 'btn btn-primary' %>
	         <%= link_to t('buttons.return_to_member_show'), show_member_path, :class => 'btn' %> </td>
	  </tr>
	</tr> 
    <% end%>
</table>

