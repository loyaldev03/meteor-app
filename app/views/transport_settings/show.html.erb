<div class='row-fluid'>
  <div class='span12'>
    <h2><%= @transport.transport.humanize %></h2>
    <h4>Transport Setting</h4>
    <hr />
  </div>
</div>

<div>
  <table class="table table-bordered table-striped">
    <tbody>
      <% @transport.settings.each do |key, value| %>
      <tr>
        <td><b><%= key.humanize %></b></td>
        <td><%= value %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class='row-fluid'>
  <div class='span12'>
    <div class="form-actions">
      <%= link_to t('back', default: t('helpers.links.back')), transport_settings_path, class: 'btn' %>
    </div>
  </div>
</div>
