<% if @current_user.has_link_to_api? %>
  <% large_button = ( use_large_button ? "btn-large-w" : "") %>
  <% if @current_user.api_id.blank? %>
    <%= 
      link_to "#", 
        class: "btn btn-info #{large_button} disabled",
        disabled: true,
        id: "resend_welcome_email" do %>
      <i class='icon-envelope'></i>
      <%= t('buttons.resend_welcome_email') %>
    <% end %>      
  <% else %>
    <%= 
      link_to user_resend_welcome_path(@current_partner.prefix, @current_club.name, @current_user.id), 
        method: :post, 
        class: "btn #{large_button} btn-info",
        id: "resend_welcome_email", 
        confirm: 'Are you sure?' do %>
      <i class='icon-envelope'></i>
      <%= t('buttons.resend_welcome_email') %>
    <% end %>
  <% end %>
<% end %>