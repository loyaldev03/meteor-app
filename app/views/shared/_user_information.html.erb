<h1> 
  <% unless params[:controller].include?('terms_of_membership') %>
    <%= params[:controller].humanize.singularize %>:
  <% end %>
  <%= @current_user.id %> - 
  <%= @current_user.first_name %> <%= @current_user.last_name %> 
	<% if @current_user.blacklisted? %>
  &nbsp;<small style="padding: 4px" class="btn-danger">Blacklisted</small>
  <% end %>
  <% if @current_user.vip_member? %>
  &nbsp;<small style="padding: 4px" class="btn-info">Vip member</small>
  <% end %>
</h1>