<% if @current_user.has_link_to_api? %>
  <% large_button = ( use_large_button ? "btn-large-w" : "") %>
  <% if @current_user.api_id.blank? %>
    <%= 
      link_to "#", 
        id: "password_reset",
        class: "btn btn-warning #{large_button} disabled" do %>
      <i class='icon-key'></i>
      <%= t('buttons.password_reset') %>
    <% end %>
  <% else %>
    <%= 
      link_to user_reset_password_path(@current_partner.prefix, @current_club.name, @current_user.id),
        method: :post, 
        class: "btn btn-warning #{large_button}", 
        id: "password_reset",
        data: {confirm: 'Are you sure?'} do %>
      <i class='icon-key'></i>
      <%= t('buttons.password_reset') %>
    <% end %>
  <% end %>
<% end %>