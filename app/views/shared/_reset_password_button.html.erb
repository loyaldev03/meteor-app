<% if @current_member.lapsed? || !@current_member.api_member || @current_member.api_id.blank? %>
  <%= 
    link_to "#", 
      method: :post,
      id: "password_reset",
      class: "btn btn-warning btn-large-w disabled" do %>
    <i class='icon-key'></i>
    <%= t('buttons.password_reset') %>
  <% end %>
<% else %>
  <%= 
    link_to member_reset_password_path(@current_partner.prefix, @current_club.name, @current_member.visible_id), 
      method: :post, 
      class: "btn btn-warning btn-large-w", 
      id: "password_reset",
      confirm: 'Are you sure?' do %>
    <i class='icon-key'></i>
    <%= t('buttons.password_reset') %>
  <% end %>
<% end %>
