<table class="table table-condensed"> 
  <tr class="control-group" >
    <td> 
      <%= f.label :encrypted_number, t('activerecord.attributes.credit_card.encrypted_number'), :class => 'help-inline' %> 
      <%= text_field :credit_card, :number, :class => 'text_field input-medium'%> 
    <td> 
      <%= f.label :expire_month, t('activerecord.attributes.credit_card.expire_month'), :class => 'help-inline' %> 
      <%= text_field :credit_card, :expire_month, :class => 'text_field input-medium'%>
      <%= f.label :expire_year, t('activerecord.attributes.credit_card.expire_year'), :class => 'help-inline' %> 
      <%= text_field :credit_card, :expire_year, :class => 'text_field input-small' %>
    </td>
  </tr> 
  <% end %>
  
  <tr class="control-group">
    <th colspan="2"> <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t(:Cancel), :back, :class => 'btn' %> </th>
  </tr>
</table>

<% if @member.new_record? %>
  <%= hidden_field_tag :enrollment_amount, 0.0 %>
  <%= f.hidden_field :country, :value => "US" %>
<% end %>