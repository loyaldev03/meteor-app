<%= render :partial => "shared/user_information" %>

<script> 
  var id = <%= @current_user.id %>; 
  var state = "<%= @current_user.state.to_s %>";
</script> 

<%= form_for @current_user, :url => edit_user_path(:id => @current_user), :html => { :class => 'form-horizontal' } do |f| %>
<%= render :partial => 'form', :locals => { :f => f } %>
<% end %>

<script type="text/javascript">
  $(document).ready( edit_user_functions() );
  if(state!=""){
  	$.get('', { country_code:"<%=@current_user.country%>", 
  		        selected_state:state }, null, 'script'); 
  }

  $(document).ready(function(){ $('#states_div').attr('data-remote', 'true'); })
</script>