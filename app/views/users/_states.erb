<%= 
	unless params[:country_code].blank?
		select_tag( 'user[state]' ,options_from_collection_for_select(
	        User.supported_states(params[:country_code]),
	        "code", "name", 
	        params[:selected_state]),
					:prompt => t('buttons.select_state'))
	else
		select_tag 'user[state]',options_for_select(['']),:prompt => t('buttons.select_state')
	end
%>