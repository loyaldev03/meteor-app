files:
  "/etc/cron.d/cron_rake":
      mode: "000644"
      owner: root
      group: root
      content: |
          15 5 * * * root docker exec -i $(docker ps -q) /bin/bash -c '/app/rake_task_runner production /app' >> /var/log/ma_cron_rake.log 2>&1

commands:
  01_clear_cron_backup:
      command: "rm -f /etc/cron.d/*.bak"
      leader_only: true
